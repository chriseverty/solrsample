<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="cheffe">
        <createTable tableName="document">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="fk_document" />
            </column>
            <column name="title" type="varchar(50)" />
        </createTable>
    </changeSet>

    <changeSet id="2" author="cheffe">
        <createTable tableName="category">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="fk_category" />
            </column>
            <column name="name" type="varchar(50)" />
        </createTable>
    </changeSet>

    <changeSet id="3" author="cheffe">
        <createTable tableName="category_value">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="fk_category_value" />
            </column>
            <column name="category_id" type="int">
                <constraints foreignKeyName="fk_category" nullable="false" />
            </column>
            <column name="name" type="varchar(50)" />
        </createTable>
    </changeSet>
    

    <changeSet id="4" author="cheffe">
        <createTable tableName="document_category">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="category_value_id" type="int">
                <constraints foreignKeyName="fk_category_value" nullable="false" />
            </column>
            <column name="document_id" type="int">
                <constraints foreignKeyName="fk_document" nullable="false" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>