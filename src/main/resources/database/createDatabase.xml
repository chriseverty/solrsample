<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="cheffe">
        <createTable tableName="person">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="firstname" type="varchar(50)" />
            <column name="lastname" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="state" type="char(2)" />
        </createTable>
    </changeSet>

    <changeSet id="2" author="cheffe" runAlways="true" failOnError="false">
        <sqlFile path="insertPersons.sql" relativeToChangelogFile="true" />
    </changeSet>

</databaseChangeLog>